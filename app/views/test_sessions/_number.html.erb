<% number_limitation = number.get_number_limitation %>

<div class="variable" data-type="number" data-variable-id="<%= number.id %>" data-min-value="<%= number_limitation[:min_value] %>" data-max-value="<%= number_limitation[:max_value] %>">
	
	<div>Имя переменной: <%= number.alias %></div>
	<div>Тип данных: Число</div>
	<div>Описание переменной: <%= number.description %></div>
	<div class="cell_characteristics">Минимальное значение: <%= number_limitation[:min_value] %></div>
	<div class="cell_characteristics">Максимальное значение: <%= number_limitation[:max_value] %></div>
	
	<div class="input_field">
		<div>Введите значение <%= number.alias %>:</div>
		<input class="number_cell input_cell" type="text" size="1"
		         data-min-value="<%= number_limitation[:min_value] %>"
		         data-max-value="<%= number_limitation[:max_value] %>"
		>
	</div>
</div>