<% number_limitation = number.get_number_limitation %>

<div class="number_type step_variable" data-variable-id="<%= number.id %>" data-variable-name="<%= number.name %>">

  <h4>Имя переменной: <%= number_limitation[:name] %></h4>
  <h4>Число</h4>
  <p class="cell_characteristics">Минимальное значение: <%= number_limitation[:min_value] %></p>
  <p class="cell_characteristics">Максимальное значение: <%= number_limitation[:max_value] %></p>


  <input class="number_cell input_cell empty_value" type="text" size="1"
         data-min-value="<%= number_limitation[:min_value] %>"
         data-max-value="<%= number_limitation[:max_value] %>"
  >


</div>