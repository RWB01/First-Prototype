<% matrix_limitation = matrix.get_matrix_limitation %>

<div class="matrix_type step_variable" data-variable-id="<%= matrix.id %>" data-variable-name="<%= matrix.name %>">

  <h4>Имя переменной: <%= matrix_limitation[:name] %></h4>
  <h4>Матрица <%= matrix_limitation[:rows] %>x<%= matrix_limitation[:columns] %></h4>

  <!-- add row numbers-->
  <% matrix_limitation[:rows].times do |row| %>

    <div class="matrix_row">

      <!-- add column numbers -->
      <% matrix_limitation[:columns].times do |column| %>

          <div class="matrix_column">

            <input class="matrix_cell input_cell" type="text" size="1" data-row="<%= row %>" data-column="<%= column %>">

          </div>

      <% end %>

    </div>

  <% end %>

</div>