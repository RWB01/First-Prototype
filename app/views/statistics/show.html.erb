  <div class="left_column">
    <div class="select_discipline_wrapper">
      <select class="discipline_select">
        <option value="0" selected hidden>Выберите дисциплину...</option>
        <% disciplines_data.each do |discipline_data| %>
            <option value="<%= discipline_data[:id] %>"><%= discipline_data[:title] %></option>
        <% end %>
