      <select class="theme_select">
        <option value="0" selected hidden>Выберите тему...</option>
      </select>
      <select class="algorithm_select">
        <option value="0" selected hidden>Выберите алгоритм...</option>
      </select>
    </div>
  </div>
  <div class="right_column"></div>
</div>